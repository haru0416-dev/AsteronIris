root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{toml,yml,yaml,json}]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
